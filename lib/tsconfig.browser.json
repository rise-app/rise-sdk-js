{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "outDir": "../dist.browser",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "types": ["reflect-metadata"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es5",
      "es2015.promise",
      "dom",
      "es2015",
      "es2016",
      "es2017.object"
    ]
  },
  "include": [
    "../package.json",
    "test/**/*.ts",
    "**/*.ts",
    "index.ts"
  ],
  "exclude": [],
  "paths": {}
}
